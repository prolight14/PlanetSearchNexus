{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "dom",
            "scripthost"
        ],
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "typeRoots": [
            "node_module/phaser/types"
        ],
        "types": [
            "Phaser"
        ]
    },
    "watchOptions": {
        "watchDirectory": "usefsevents"
    },
    "include": ["./**/*"]
}